syntax on
filetype plugin indent on
set encoding=utf8

inoremap jj <ESC>
nnoremap s <Nop>

set noshowmode "mode info is displayed in statusline

set ruler
set laststatus=2
set backspace=eol,start,indent
set incsearch 
set showmatch
set expandtab
set autoindent
set shiftwidth=4
set tabstop=4
set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines
